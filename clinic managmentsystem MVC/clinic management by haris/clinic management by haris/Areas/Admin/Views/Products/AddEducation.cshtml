@model clinic_management_by_haris.Models.tbl_products

@{
    ViewBag.Title = "AddMedicines";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Add Educational Events</h2>

@using (Html.BeginForm("AddEducation", "Products", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h5>Event Name:</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.pname, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Event Type:</h5>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ptype,
                new List<SelectListItem>
                    {
                    new SelectListItem { Value = "Lecture" , Text = "Lecture" },
                    new SelectListItem { Value = "Seminar"  , Text = "Seminar" },
                    new SelectListItem { Value = "Paractical" , Text = "Paractical" }
                    },
                    new { @class = "myselect" })
            </div>
        </div>

        <div class="form-group">
            <h5>Event Price:</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>EventCost:</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.cost, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.cost, "", new { @class = "text-danger" })
            </div>
        </div>

       

      

        <div class="form-group">
            <h5>Event Description:</h5>
            <div class="col-md-10">
                <textarea name="description" rows="5" cols="125" maxlength="200">
Trainner:
Location:
Time:
Date:

                </textarea>

                @Html.ValidationMessageFor(model => model.pdescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Event Image:</h5>
            <div class="col-md-10">
                <input type="file" name="file">
                @Html.ValidationMessageFor(model => model.pimage, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-primary btn-block" />
            </div>
        </div>
    </div>
}
