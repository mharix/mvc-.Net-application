@model IEnumerable<clinic_management_by_haris.Models.tbl_orders>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Orders</h2>

 
<table class="table">
    <tr>
        <th>
           Client Name
        </th>
        <th>
            Contact Details
        </th>
        <th>
            Product Name
        </th>
        <th>
         Quantity
        </th>
        <th>
           Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_clientLogin.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_clientLogin.caddress)
            <br/>
            @Html.DisplayFor(modelItem => item.tbl_clientLogin.phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tbl_products.pname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantity)
        </td>
        <td>
          
            @Html.DisplayFor(modelItem => item.orderdate)
        </td>

        <td>
           @Html.ActionLink("Cancle", "CancleOrder", new { id=item.id }) |
            @Html.ActionLink("Accept", "updateOrders", new { id=item.id })
        </td>
    </tr>
}

</table>
