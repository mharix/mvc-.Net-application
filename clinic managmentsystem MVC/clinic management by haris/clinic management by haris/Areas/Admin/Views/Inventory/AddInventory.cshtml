@model clinic_management_by_haris.Models.tbl_inventory

@{
    ViewBag.Title = "AddInventory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Add products To Inventory</h2>

@using (Html.BeginForm("AddInventory", "Inventory", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
    
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h5>Products</h5>
            <div class="col-md-10">
                
                @*@Html.DropDownList("products", null, htmlAttributes: new { @class = "form-control" })*@
               
              <select name="productId">
                  @foreach (var item in ViewBag.products)
                  {
                      <option value="@item.pid">@item.pname-(@item.ptype)</option>
                  }
                  </select>
                
            
             </div>
        </div>

        <div class="form-group">
            <h5>Product quantity</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Product/Event Date(Expiry)</h5>
            <div class="col-md-10">
                <input type="datetime-local" name="expdate"/>
               
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-primary btn-block" />
            </div>
        </div>
    </div>
}

